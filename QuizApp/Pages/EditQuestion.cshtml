@page "{id:int}"
@model QuizApp.Pages.EditQuestionModel
@{
    ViewData["Title"] = "Update Question";
}
<h3>@ViewData["Title"]</h3>
<hr />

<div class="row">
    <div class="col-md-6 offset-3">
        <form method="post">
            <div class="mb-3">
                <label for="questionid" class="form-label">QuestionId</label>
                <input name="Question.QuestionId" type="text" class="form-control" id="questionid" value="@Model.Question.QuestionId" readonly />
                <span asp-validation-for="@Model.Question.QuestionId"></span>
            </div>
            <div class="mb-3">
                <label for="content" class="form-label">Content</label>
                <input name="Question.Content" type="text" class="form-control" id="content" placeholder="@Model.Question.Content" />
                <span asp-validation-for="@Model.Question.Content"></span>
            </div>
            <div class="mb-3">
                <label for="answercontenta" class="form-label">Answer Content A</label>
                <input name="Answers[0].Content" type="text" class="form-control" id="answercontenta" placeholder="@Model.Answers[0].Content" rows="3"></input>
                <span asp-validation-for="@Model.Answers[0].Content"></span>
            </div>
            <div class="mb-3">
                <label for="answercontentb" class="form-label">Answer Content B</label>
                <input name="Answers[1].Content" type="text" class="form-control" id="answercontentb" placeholder="@Model.Answers[1].Content" rows="3"></input>
                <span asp-validation-for="@Model.Answers[1].Content"></span>
            </div>
            <div class="mb-3">
                <label for="answercontentc" class="form-label">Answer Content C</label>
                <input name="Answers[2].Content" type="text" class="form-control" id="answercontentc" placeholder="@Model.Answers[2].Content" rows="3"></input>
                <span asp-validation-for="@Model.Answers[2].Content"></span>
            </div>
            <div class="mb-3">
                <label for="answercontentd" class="form-label">Answer Content D</label>
                <input name="Answers[3].Content" type="text" class="form-control" id="answercontentd" placeholder="@Model.Answers[3].Content" rows="3"></input>
                <span asp-validation-for="@Model.Answers[3].Content"></span>
            </div>
            <select name="Question.CorrectAnswerId" required>
                <option value="">Correct Answer</option>
                <option value=0>A</option>
                <option value=1>B</option>
                <option value=2>C</option>
                <option value=3>D</option>
            </select>

            <button type="submit" class="btn btn-success">Update Question</button>
            <a asp-page="/Questions" class="btn btn-secondary">Cancel</a>
        </form>

    </div>
</div>